<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:MySongs;assembly=MySongs"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             x:Class="MySongs.Views.FavPage"
             BackgroundColor="DarkMagenta"
             Icon="fav_empty.png">
    <ContentPage.Content>

        <Grid>
            <flv:FlowListView SeparatorVisibility="None" 
                              HasUnevenRows="true" 
                              FlowColumnCount="1"
                              FlowColumnMinWidth="110"
			                  FlowItemTappedCommand="{Binding ItemTappedCommand}" 
                              FlowLastTappedItem="{Binding LastTappedItem}"
                              FlowItemsSource="{Binding FavSongs}">

                <flv:FlowListView.FlowColumnTemplate>
                    <DataTemplate>
                        <Grid Padding="2">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Source="{Binding ImageUrl}"
                                   HeightRequest="150" 
                                   Aspect="AspectFill"/>

                            <Label Text="{Binding Title}"
                                   HorizontalOptions="Fill" 
                                   HorizontalTextAlignment="Center" 
                                   VerticalOptions="End"
							       BackgroundColor="Silver"
                                   WidthRequest="20"
                                   MinimumWidthRequest="20"
                                   Opacity="0.8"
                                   FontSize="Medium"/>
                        </Grid>
                    </DataTemplate>
                </flv:FlowListView.FlowColumnTemplate>
            </flv:FlowListView>

            <Label Text="No hay canciones en favoritos"
                    HorizontalOptions="Center" 
                    HorizontalTextAlignment="Center" 
                    VerticalOptions="Center"
                    FontSize="Medium"
                    IsVisible="{Binding IsFavSongsEmpty}"/>
        </Grid>

    </ContentPage.Content>
</ContentPage>
